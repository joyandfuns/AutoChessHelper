<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/icon_weapon"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:background="@color/white_0a"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/white_bb"
        android:includeFontPadding="false"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@+id/icon_weapon"
        app:layout_constraintBottom_toBottomOf="@+id/icon_weapon"
        app:layout_constraintStart_toEndOf="@+id/icon_weapon"
        tools:text="Axe"
        />


</androidx.constraintlayout.widget.ConstraintLayout>